@model Loja_Produtos.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1>Mostrar detalhes do produto!</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mercadoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mercadoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
